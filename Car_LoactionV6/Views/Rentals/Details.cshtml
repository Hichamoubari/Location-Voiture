@model Car_LoactionV6.Models.Rental

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row m-0">
        <div class="col-lg-7 pb-5 pe-lg-5">
            <div class="row">
                <div class="col-12 p-5">  <img src="@Url.Content("~/photos/"+Model.Cars.Image)" alt="" style="width:624px;height:250px"> </div>
                <div class="row m-0 bg-light">
                    <div class="col-md-4 col-6 ps-30 pe-0 my-4">
                        <p class="text-muted">Nom Client</p>
                        <p class="h5">@Html.DisplayFor(model => model.Users.Nom)</p>
                    </div>
                    <div class="col-md-4 col-6 ps-30 my-4">
                        <p class="text-muted">Address mail</p>
                        <p class="h5 m-0">@Html.DisplayFor(model => model.Users.AdresseMail)</p>
                    </div>
                    <div class="col-md-4 col-6 ps-30 my-4">
                        <p class="text-muted">Date de  Naissance</p>
                        <p class="h5 m-0">@Html.DisplayFor(model => model.Users.DateNaissance)</p>
                    </div>
                    <div class="col-md-4 col-6 ps-30 my-4">
                        <p class="text-muted">Telephone</p>
                        <p class="h5 m-0">@Html.DisplayFor(model => model.Users.Telephone)</p>
                    </div>
                    <div class="col-md-4 col-6 ps-30 my-4">
                        <p class="text-muted">Matricule of car</p>
                        <p class="h5 m-0">@Html.DisplayFor(model => model.Cars.Matriculation)</p>
                    </div>
                    <div class="col-md-4 col-6 ps-30 my-4">
                        <p class="text-muted">Date of circulation</p>
                        <p class="h5 m-0">@Html.DisplayFor(model => model.Cars.DateCirculation)</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-5 p-0 ps-lg-4">
            <div class="row m-0">
                <div class="col-12 px-4">
                    <div class="d-flex align-items-end mt-4 mb-2">
                        <p class="h4 m-0"><span class="pe-1">@Html.DisplayFor(model => model.Cars.Modele.NomMarque)</span></p>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <p class="textmuted">status</p>
                        <p class="fs-14 fw-bold">@Html.DisplayFor(model => model.Status)</p>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <p class="textmuted">Type location</p>
                        <p class="fs-14 fw-bold">@Html.DisplayFor(model => model.TypeLocation)</p>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <p class="textmuted">Promo code</p>

                        @if (Model.TypeLocation == "Longue duree")
                        {
                            <p class="fs-14 fw-bold">-60%</p>
                        }
                        else
                        {
                            <p class="fs-14 fw-bold">0%</p>
                        }


                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <p class="textmuted">Prix par jour</p>
                        <p class="fs-14 fw-bold">@Html.DisplayFor(model => model.Cars.Prix) MAD</p>
                    </div>

                </div>
                <div class="col-12 px-0">
                    <div class="row bg-light m-0">
                        <div class="col-12 px-4 my-4">
                            <p class="fw-bold">Date</p>
                        </div>
                        <div class="col-12 px-4">
                            <div class="d-flex mb-4">
                                <span class="">
                                    <p class="text-muted">Date debut</p> 
     
                                </span>
                                <div class=" w-100 d-flex flex-column align-items-end">
                                    <p class="text-muted">@Html.DisplayFor(model => model.DateDebut)</p>
                                </div>
                            </div>
                            <div class="d-flex mb-5">
                                <span class="me-5">
                                    <p class="text-muted">Date Fin</p>
                                </span>
                                <div class="w-100 d-flex flex-column align-items-end">
                                    <p class="text-muted">@Html.DisplayFor(model => model.DateFin)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row m-0">
                        <div class="col-12 mb-4 p-0">
                            

                                <a href="@Url.Action("AccepterConfirm","Rentals", new { id = Model.IdRental},null)" <button type="button" style="width:200px;" class="btn btn-success">Accepter</button></a>

                                <a href="@Url.Action("RefuserConfirm","Rentals", new { id = Model.IdRental },null)" <button type="button" style="width:200px;" class="btn btn-danger">Refuser</button></a>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
